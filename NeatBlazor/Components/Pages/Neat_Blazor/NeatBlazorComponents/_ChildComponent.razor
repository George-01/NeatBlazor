<div>
    <div class="alert alert-info">
        @Title
    </div>
    @if(ChildContent is not null)
    {
        <div class="alert alert-success">
            @ChildContent
        </div>
    }
</div>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
